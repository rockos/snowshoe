<% layout('layout_mob') -%>

<form name="main_form" method="post" action="/mob/110" data-ajax="false">

  <div data-role="content">

    <div data-role="collapsible-set"> 
      <% for (var i = 0, max = pageNavi.tab.length; i < max; i++) { %>
        <fieldset data-role="controlgroup">
          <div data-role="button">
            <div class="ui-grid-a">
              <div class="ui-block-a" style="width:30%;">会員番号</div>
              <div class="ui-block-b" style="width:70%;text-align:left;"><%= pageNavi.tab[i].userid %></div>
            </div>
            <div class="ui-grid-a">
              <div class="ui-block-a" style="width:30%;">搬入数量</div>
              <div class="ui-block-b" style="width:70%;text-align:left;"><%= pageNavi.tab[i].sqty %></div>
            </div>
          </div>
          <div data-role="collapsible" data-collapsed="true">
            <h3>詳細</h3>
                <div class="ui-grid-a">
                  <div class="ui-block-a">ロッカーNo</div>
                  <div class="ui-block-b" style="width:50%;"><%= pageNavi.tab[i].pnam %></div>
                </div>
                <div class="ui-grid-a">
                  <div class="ui-block-a">タグNo</div>
                  <div class="ui-block-b" style="width:50%;"><%= pageNavi.tab[i].lotn %></div>
                </div>
                <div class="ui-grid-a">
                  <div class="ui-block-a">預け入れ期間</div>
                  <div class="ui-block-b" style="width:50%;"><%= pageNavi.tab[i].mem1 %></div>
                </div>
                <div class="ui-grid-a">
                  <div class="ui-block-a">特記事項</div>
                  <div class="ui-block-b" style="width:50%;"><%= pageNavi.tab[i].mem2 %></div>
                </div>
                <div class="ui-grid-a">
                  <div class="ui-block-a">お客様メモ</div>
                  <div class="ui-block-b" style="width:50%;"><%= pageNavi.tab[i].mem3 %></div>
                </div>
                <img src="/images/car03.gif" /> 
          </div>
        </fieldset>
      <% } /* for */ %>
    </div>

    <div>
      <fieldset data-role="controlgroup">
        <legend>会員番号</legend>
        <label for="userid_110">会員番号</label>
        <select name="userid" id="userid_110">
          <option value=""></option><!--dmy-->
          <% for (var i = 0,max = pageNavi.options2.length; i < max; i++ ) { %>
          <option value="<%= pageNavi.options2[i].userid %>" <%= pageNavi.options2[i].selected %>>
              <%= pageNavi.options2[i].userid %>
          </option>
          <% } %>
        </select>
      </fieldset>
    </div>

    <div data-role="controlgroup">
      <input type="submit" name="QRY" data-theme="b" value="検索">
    </div> 

  </div><!--content-->

</form>
